# Steam Web API Key
# Get yours at: https://steamcommunity.com/dev/apikey
STEAM_API_KEY=your_steam_api_key_here
STEAM_USER_ID=your_steam_id_here

# Notion Integration
# Create integration at: https://www.notion.so/my-integrations
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_database_id_here

# Optional: Name of the title property in your Notion database (default: "Name")
# Check your database and use the exact name of the title column
# NOTION_TITLE_PROPERTY=Name

# Optional: ProtonDB Cache Duration (days)
PROTONDB_CACHE_DAYS=30

# Optional: IGDB API Credentials (for matching non-Steam games to Steam App IDs)
# Register app at: https://dev.twitch.tv/console/apps (Category: Other)
# This enables ProtonDB enrichment for Epic/GOG/Amazon games
# IGDB_CLIENT_ID=your_twitch_client_id_here
# IGDB_CLIENT_SECRET=your_twitch_client_secret_here

# Optional: Log level for debugging (default: info)
# Set to 'debug' to see detailed logging for troubleshooting
# LOG_LEVEL=info

# Optional: Configure which properties to sync to Notion
# Set to 'false' to disable syncing a specific property (all enabled by default)
# NOTION_SYNC_CANONICAL_ID=true
# NOTION_SYNC_PRIMARY_SOURCE=true
# NOTION_SYNC_OWNED_ON=true
# NOTION_SYNC_STEAM_APP_ID=true
# NOTION_SYNC_PLAYTIME=true
# NOTION_SYNC_LAST_PLAYED=true
# NOTION_SYNC_PROTON_TIER=true
# NOTION_SYNC_STEAM_DECK=true
# NOTION_SYNC_COVER_IMAGE=true
# NOTION_SYNC_LIBRARY_STATUS=true
